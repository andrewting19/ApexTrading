.c-n-modal
	padding 1rem
	position fixed
	z-index 1041
	left 0
	top 0
	width 100%
	height 100%
	overflow-x hidden
	overflow-y auto
	outline 0
	-webkit-overflow-scrolling touch
	@media (min-width: screen-sm-min)
		padding 2rem 1rem

	&__content
		position relative
		max-width 80rem
		margin-right auto
		margin-left auto
		pointer-events none
		.c-n-modal_sm &
			max-width 40rem

	&__layout
		position relative
		width 100%
		pointer-events auto
		font-size 1.4rem
		background white
		color outer-space
	&__header
		height 3rem
		display flex
		align-items center
		justify-content flex-end
		flex-shrink 0
		padding 0 1.5rem
	&__close
		.icon
			display block
		&:hover
			color tabasco
	&__body
		padding 1rem 1rem 4rem
		min-height 10rem
		max-width 52rem
		margin 0 auto
		&.pad-top-4
			padding-top 4rem
	&__title
		text-transform uppercase
		font-weight 700
		text-align center
		width 100%
		margin 0
		padding 1rem 0
		&.has-no-text-tranform
			text-transform none
		@media (min-width: screen-sm-min)
			padding 2.5rem 0

	&__sub-title-switch
		text-align center
		font-weight 400
		margin-top -1rem
		margin-bottom 2rem
		@media (min-width: screen-sm-min)
			margin-top -2rem
			margin-bottom 3rem
	&__sub-title
		text-align center
		font-weight 400
	&__footer
		display flex
		justify-content flex-end
		align-items center
		&.is-space-between
			justify-content space-between
		@media (max-width: breakpoint-xs-max)
			flex-direction column
			flex-wrap: wrap
			justify-content flex-start

.modal-title
	flex-shrink 0

.modal-overlay {
    background-color: #000
    cursor: pointer
    position: fixed
    opacity: .75
    z-index: 1040
    bottom: 0
    right: 0
    width: 100vw
    height: 100vh
}